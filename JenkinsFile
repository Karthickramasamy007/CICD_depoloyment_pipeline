pipeline {
    agent any
    
    parameters {
        // This will create a dropdown in the Jenkins UI with the list of branches
        choice(name: 'BRANCH', choices: ['main', 'develop', 'feature-branch'], description: 'Select the branch to build')
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the branch selected by the user in the UI
                    git url: 'https://github.com/your-repository.git', branch: "${params.BRANCH}"
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Here you can add the build steps (e.g., building Docker image, running tests, etc.)
                    echo "Building branch ${params.BRANCH}..."
                    // Example: sh 'python3 setup.py install' for Python apps
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // Deploy logic (e.g., deploying to Kubernetes, pushing to Artifact Registry, etc.)
                    echo "Deploying branch ${params.BRANCH}..."
                }
            }
        }
    }
    
    post {
        success {
            echo "Pipeline finished successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
